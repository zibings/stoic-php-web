{
	"name": "stoic/web",
	"description": "Web site helper components for the Stoic framework",
	"version": "1.4.1",
	"homepage": "https://stoic-framework.com",
	"autoload": {
		"classmap": ["Web/"],
		"exclude-from-classmap": [
			"Tests/"
		]
	},
	"require": {
		"php": ">=8.3",
		"stoic/stoic": "^1",
		"stoic/io": "^1",
		"stoic/pdo": "^1",
		"andym84/config": "^1",
		"league/plates": "^3",
		"ext-pdo": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9"
	},
	"scripts": {
		"post-create-project-cmd": [
			"stoic-create"
		]
	},
	"bin": [
		"stoic-create",
		"stoic-migrate",
		"stoic-configure"
	],
	"extra": {
		"files": [
			"Templates/api-index.php",
			"Templates/core.php",
			"Templates/index.tpl.php",
			"Templates/site-index.php"
		]
	}
}
